.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
}

.my-header {
  width: 100%;
  background: #f0f0f0;
  padding: 18rpx 40rpx;
}

.my-header text {
  font-size: 32rpx;
  color: #666;
}

.my-info {
  width: 100%;
}

.info-content {
  padding: 10rpx 46rpx;
}

.info-content text {
  font-size: 30rpx;
}

.page-body {
  width: 100%;
}

.btn-area {
  /* margin-top: 26rpx; */
  box-sizing: border-box;
  padding: 0 30rpx;
}

button {
  font-size: 30rpx;
  background-color: #3399ea;
  color: #fff;
}

.section {
  display: flex;
  margin-bottom: 30rpx;
  padding: 0 38rpx;
  height: 130rpx;
  align-items: center;
  background-color: #fff;
}

.section__title {
  flex-grow: 1;
  font-size: 30rpx;
}

.section__title .star {
  color: red;
}

.section_name {
  flex-grow: 2;
  justify-content: flex-end;
  font-size: 30rpx;
}

.section_name .gander {
  text-align: right;
}

.section_name .gander label {
  padding-left: 30rpx;
}

.section_name .photo {
  position: absolute;
  top: 10rpx;
  right: 26rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
}

.section_name .photo>image {
  width: 100%;
  height: 100%;
}

.btn-area {
  display: flex;
  justify-content: center;
}

.btn-area>button {
  width: 90%;
}

